<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<object id="window" class="GtkWindow">
		<property name="title">Camera Control</property>

	
		<child><object id="grid" class="GtkGrid">
			<!-- Body -->
			<child><object id="cam_session_box" class="GtkBox">
				<layout>
					<property name="column">0</property>
					<property name="row">1</property>
					<property name="column-span">3</property>
				</layout>
			</object></child>

			<child><object class="GtkLabel">
				<property name="label"></property>
				<layout>
					<property name="row">2</property>
				</layout>
			</object></child>

			<child><object id="start_acquisition" class="GtkButton">
				<property name="label">Start Acquisition</property>
				<layout>
					<property name="column">0</property>
					<property name="row">3</property>
				</layout>
			</object></child>
			<child><object id="stop_acquisition" class="GtkButton">
				<property name="label">Stop Acquisition</property>
				<layout>
					<property name="column">2</property>
					<property name="row">3</property>
				</layout>
			</object></child>
			<child><object id="save_btn" class="GtkButton">
				<property name="label">Start Save</property>
				<layout>
					<property name="column">1</property>
					<property name="row">3</property>
				</layout>
			</object></child>

			<!-- Image Display -->
			<child><object id="img_window" class="GtkPicture">
				<layout>
					<property name="column">5</property>
					<property name="row">1</property>
					<property name="column-span">5</property>
					<property name="row-span">5</property>
				</layout>
			</object></child>

		</object></child>
	</object>
</interface>
